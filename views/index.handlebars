<section class="py-2">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-3 mt-3 pt-5">
                Ebook Sale Today
            </h1>
            <p class="lead">Learn web developement mean stack</p>
            <form action="/charge" method="POST">
                <script
                    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="{{stripePublishableKey}}"
                    data-amount="1000"
                    data-name="Web Ebook"
                    data-description="A book for web development"
                    data-image="/img/marketplace.png"
                    data-locale="auto">
                </script>
                <script>
                   document.getElementsByClassName("stripe-button-el")[0].hidden = true;
                </script>
                <button type="submit" class="btn btn-outline-dark text-blue btn-lg">Purchase it for 10$</button>
            </form>
        </div>
        <div class="col-md-6">
            <img src="/img/rsz_book.png" alt="" class="img-fluid">
        </div>
    </div>
</section>